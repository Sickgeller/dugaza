<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.spring.reservation.house.dao.HouseReservationMapper">

    <resultMap id="houseReservationResultMap" type="kr.spring.reservation.house.vo.HouseReservationVO">
        <id property="reservationId" column="RESERVATION_ID"/>
        <result property="memberId" column="MEMBER_ID"/>
        <result property="houseId" column="HOUSE_ID"/>
        <result property="roomId" column="ROOM_ID"/>
        <result property="roomName" column="ROOM_NAME"/>
        <result property="roomPrice" column="ROOM_PRICE"/>
        <result property="reservationStartDate" column="RESERVATION_START"/>
        <result property="reservationEndDate" column="RESERVATION_END"/>
        <result property="reservationCount" column="RESERVATION_COUNT"/>
        <result property="price" column="RESERVATION_PRICE"/>
        <result property="status" column="RESERVATION_STATUS"/>
    </resultMap>

    <select id="findBySellerId" resultMap="houseReservationResultMap">
        SELECT * FROM (
                          SELECT ROWNUM AS RN, A.*
                          FROM (
                                   SELECT
                                       HR.RESERVATION_ID,
                                       HR.MEMBER_ID,
                                       HR.HOUSE_ID,
                                       HR.ROOM_ID,
                                       HRI.ROOM_NAME,
                                       HRI.PRICE AS ROOM_PRICE,
                                       HR.RESERVATION_START,
                                       HR.RESERVATION_END,
                                       HR.RESERVATION_COUNT,
                                       HR.PRICE AS RESERVATION_PRICE,
                                       HR.STATUS AS RESERVATION_STATUS
                                   FROM HOUSE_RESERVATION HR
                                            JOIN HOUSE_ROOM_INFO HRI ON HR.ROOM_ID = HRI.ROOM_ID
                                   WHERE EXISTS (
                                       SELECT 1
                                       FROM HOUSE_SELLER_DETAIL HSD
                                       WHERE HSD.HOUSE_ID = HR.HOUSE_ID
                                         AND HSD.SELLER_ID = #{sellerId}
                                   )
                                   ORDER BY HR.RESERVATION_ID DESC
                               ) A
                          WHERE ROWNUM &lt;= #{endRow}
                      )
        WHERE RN &gt;= #{startRow}
    </select>

</mapper>