<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.spring.member.dao.MemberMapper">
    <resultMap id="memberMap" type="kr.spring.member.vo.MemberVO">
        <id property="memberId" column="MEMBER_ID"/>
        <result property="id" column="ID"/>
        <result property="password" column="PASSWORD"/>
        <result property="name" column="NAME"/>
        <result property="email" column="EMAIL"/>
        <result property="phone" column="PHONE"/>
        <result property="address" column="ADDRESS"/>
        <result property="addressDetail" column="ADDRESS_DETAIL"/>
        <result property="status" column="STATUS"/>
        <result property="role" column="ROLE"/>
        <result property="createdAt" column="CREATED_AT"/>
        <result property="updatedAt" column="UPDATED_AT"/>
        <result property="profileImage" column="PROFILE_IMAGE"/>
        <result property="kakaoId" column="KAKAO_ID"/>
        <result property="nickname" column="NICKNAME"/>
    </resultMap>

    <!-- 회원목록 처리 -->
    <!-- sql 태그와 include 태그를 이용해서 SQL문을 재사용 -->
    <sql id="memberSearch">
        AND m.role != 'ADMIN'
        <if test="keyword != null and keyword != ''">
            <if test="keyfield==1">
                AND (m.id LIKE '%' || #{keyword} || '%' OR
                m.nickname LIKE '%' || #{keyword} || '%')
            </if>
            <if test="keyfield==2">
                AND m.name LIKE '%' || #{keyword} || '%'
            </if>
            <if test="keyfield==3">
                AND m.email LIKE '%' || #{keyword} || '%'
            </if>
            <if test="keyfield==4">
                AND (m.id LIKE '%' || #{keyword} || '%' OR
                m.name LIKE '%' || #{keyword} || '%' OR
                m.email LIKE '%' || #{keyword} || '%' OR
                m.phone LIKE '%' || #{keyword} || '%')
            </if>
        </if>
        <if test="status != null and status != ''">
            AND m.status = #{status}
        </if>
    </sql>
    
    <!-- 전체/검색 레코드수 -->
    <select id="selectRowCount" parameterType="map" resultType="integer">
        SELECT COUNT(*)
        FROM member m 
        WHERE 1=1
        <include refid="memberSearch"/>
    </select>
    
    <!-- 커서 기반 페이지네이션: 전체/검색 목록 -->
	<select id="selectList" parameterType="map" resultMap="memberMap">
		SELECT *
		FROM member m 
		WHERE 1=1
		<include refid="memberSearch"/>
		<if test="cursor != null">
			AND m.member_id &lt; #{cursor}
		</if>
		<choose>
			<when test="sort == 'name'">
				ORDER BY m.name ASC, m.member_id DESC
			</when>
			<when test="sort == 'email'">
				ORDER BY m.email ASC, m.member_id DESC
			</when>
			<otherwise>
				ORDER BY m.member_id DESC
			</otherwise>
		</choose>
		FETCH FIRST #{pageSize} ROWS ONLY
	</select>
	
	<!-- 다음 페이지 존재 여부 확인 -->
	<select id="hasNextPage" parameterType="map" resultType="boolean">
		SELECT CASE 
			WHEN COUNT(*) > 0 THEN 1 
			ELSE 0 
		END
		FROM member m 
		WHERE 1=1
		<include refid="memberSearch"/>
		<if test="cursor != null">
			AND m.member_id &lt; #{cursor}
		</if>
		AND ROWNUM = 1
	</select>

    <select id="findMemberIdByUsername" resultType="long">
        SELECT MEMBER_ID
        FROM MEMBER
        WHERE ID = #{username}
    </select>

    <select id="selectMemberByUsername" parameterType="string" resultMap="memberMap">
        SELECT * FROM MEMBER WHERE ID=#{id}
    </select>

    <select id="selectCheckMember" parameterType="string" resultMap="memberMap">
        SELECT * FROM MEMBER WHERE ID=#{id}
    </select>

</mapper>














